<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chess960.chess960"
    android:versionName="1.7">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.alexm.chess960.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alexm.chess960.RulesActivity"
            android:parentActivityName="com.alexm.chess960.MainMenu" />
        <activity
            android:name="com.alexm.chess960.randomPack.RandomActivity"
            android:parentActivityName="com.alexm.chess960.MainMenu" />
        <activity android:name="com.alexm.chess960.clockPack.ClockActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"/>
    </application>

</manifest>